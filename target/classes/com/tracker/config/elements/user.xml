<elements>

    <set name="common" title="userCard.tab.common">
         <property name="user_id" title="user.card.user_id" type="textField" typeForSaving="text" mandatoryCondition="*"  customClassName = "half"/>
        <property name="user_pass"
                  typeForSaving="text"
                  title="user.card.user_pass"
                  type="textField"
                  customClassName = "half"
                  mandatoryCondition="*" />
        <!-- mandatoryCondition="{ 'user_id': ' IN (a) ', 'firstName': ' NOT IN (a,b)'}" />-->

         <property name="firstName" title="user.card.firstName" type="textField"   typeForSaving="text" mandatoryCondition="*" customClassName = "half"/>
         <property name="lastName" title="user.card.lastName" type="textField"   typeForSaving="text" mandatoryCondition="*" customClassName = "half"/>
         <property name="roles" title="user.card.roles" type="multiSelect"   typeForSaving="text" mandatoryCondition="*" customClassName = "half"/>
         <property name="description" title="user.card.description" type="textArea"  typeForSaving="text" mandatoryCondition="*"  customClassName = "fullString"/>
    </set>

    <set name="test" title="userCard.tab.additionalInfo">


        <property name="email" title="user.card.email" type="textField"   typeForSaving="text" mandatoryCondition="*" customClassName = "half"/>

        <property name="avatar" title="user.card.avatar" type="image"  typeForSaving="file" mandatoryCondition="*" customClassName = "half"/>

        <property name="birthDay" title="user.card.birthDay" type="date"  typeForSaving="text" mandatoryCondition="*" customClassName = "half"/>

        <!--<property name="sdasdasda" title="user.card.sdasd" type="date" mandatoryCondition="*" customClassName = "half"/>-->

    </set>

    <buttons name="buttons" title="buttons">
        <property name="save" title="user.card.save" type="button" customClassName = "save"/>
        <property name="close" title="user.card.close" type="button" customClassName = "save"/>
    </buttons>

</elements>